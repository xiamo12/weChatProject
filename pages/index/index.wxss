 page{
  font-size: 30rpx;
}
.header{
  width: 100%;
  height: 200rpx;
  text-align: center;
  border-bottom: solid 1px #ccc;
  background:  #f5f5f1
}
.header image{
  width: 100%;
  height: 100%;
}

.header_tips{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx;
}
.header_tips image{
  width: 36rpx;
  height: 32rpx;
  margin: 0 20rpx;
}
.header_tips text{
  margin-left: -100rpx
}
.order_cards{
  height: 400rpx;
  margin-top: 180rpx;
}
.order{
  width: 100%;
  height: 200rpx;
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.order_cards image{
  width: 160rpx;
  height: 160rpx;
  margin-left: 30rpx;
}
.order_type{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.order_type text{
  margin: 10rpx;
}
.order_type text:last-child{
  font-size: 24rpx;
  color: #999
}
.order_btn{
  width: 150rpx;
  height: 65rpx;
  line-height: 65rpx;
  margin-right: 30rpx;
  text-align: center;
  background: yellow;
  border-radius: 30rpx;
  letter-spacing: 8rpx;
} 

.img_item{
  width: 100%;
  height: 300rpx;
  text-align: center
}
.img_item image{
  width: 95%;
  height: 95%;
  border-radius: 20rpx;
  margin: 10rpx;
}
